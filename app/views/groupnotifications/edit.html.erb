<h2>Edit Group Notification</h2>


<%= form_for @groupnotification do |f| %>
  <% if @groupnotification.errors.any? %>
    <div class="error_messages">
      <h3>Form is invalid</h3>
      <ul>
        <% for message in @groupnotification.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label "Target Group" %><br />
    <%= collection_select :groupnotification, :group_id, Group.all, :id, :name, {}, {} %></br>
  </p>
  <p>
    <%= f.label :alert %><br />
    <%= f.text_field :alert, :size => "80" %>
  </p>
  <p>
    <%= f.label :badge %><br />
    <%= f.text_field :badge %>
  </p>


  <p class="button"><%= f.submit "Update Group Notification", :class => "button"%></p>
<% end %>
